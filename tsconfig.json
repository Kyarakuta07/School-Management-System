{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        /* Allow JavaScript */
        "allowJs": true,
        "checkJs": false,
        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "moe/user/js/*"
            ],
            "@pet/*": [
                "moe/user/js/pet/*"
            ]
        },
        /* Type definitions */
        "typeRoots": [
            "./node_modules/@types",
            "./moe/user/js/types"
        ]
    },
    "include": [
        "moe/user/js/**/*.ts",
        "moe/user/js/**/*.js",
        "moe/user/js/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}